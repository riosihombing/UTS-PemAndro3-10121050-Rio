<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment"
    android:background="@color/pale_pink">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:id="@id/judul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/profile"
            android:fontFamily="@font/larken_medium"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:gravity="center"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/judul"
        android:background="@drawable/roundedbg"
        android:layout_marginBottom="50dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="UselessParent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/profile"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/larken_light"
                    android:textSize="22sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:gravity="left"
                    tools:ignore="RtlHardcoded" />

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/imageList"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:src="@drawable/profil"
                    app:civ_border="false"
                    app:civ_shadow="true"
                    app:civ_shadow_color="@color/rosy_brown"
                    app:civ_shadow_radius="5" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/rio"
                    android:textAlignment="center"
                    android:fontFamily="@font/caviar_dreams"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:textSize="24sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/description"
                    android:fontFamily="@font/larken_light"
                    android:textSize="22sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:gravity="left"
                    tools:ignore="RtlHardcoded" />
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp">
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="20dp"
                            android:layout_weight="0"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/caviar_dreams"
                            android:text="@string/nim" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/caviar_dreams"
                            android:layout_weight="1"
                            android:text="@string/_10121050"/>
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:textSize="16sp"
                            android:layout_weight="0"
                            android:textColor="@color/black"
                            android:fontFamily="@font/caviar_dreams"
                            android:text="@string/nama"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/caviar_dreams"
                            android:layout_weight="1"
                            android:text="@string/rio_s"/>
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:textSize="16sp"
                            android:layout_weight="0"
                            android:textColor="@color/black"
                            android:fontFamily="@font/caviar_dreams"
                            android:text="@string/kelas"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/caviar_dreams"
                            android:layout_weight="1"
                            android:text="@string/if_2"/>
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:textSize="16sp"
                            android:layout_weight="0"
                            android:textColor="@color/black"
                            android:fontFamily="@font/caviar_dreams"
                            android:text="@string/alamat"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/caviar_dreams"
                            android:layout_weight="1"
                            android:text="@string/jayapura"/>
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:textSize="16sp"
                            android:layout_weight="0"
                            android:textColor="@color/black"
                            android:fontFamily="@font/caviar_dreams"
                            android:text="@string/agama"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/caviar_dreams"
                            android:layout_weight="1"
                            android:text="@string/kristen"/>
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:textSize="16sp"
                            android:layout_weight="0"
                            android:textColor="@color/black"
                            android:fontFamily="@font/caviar_dreams"
                            android:text="@string/jenis_kelamin"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/caviar_dreams"
                            android:layout_weight="1"
                            android:text="@string/laki_laki"/>
                    </TableRow>
                </TableLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/contact"
                    android:fontFamily="@font/larken_light"
                    android:textSize="22sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="left"
                    tools:ignore="RtlHardcoded" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:orientation="horizontal">
                        <ImageButton
                            android:id="@+id/btn_dial_number"
                            android:src="@drawable/phonecall"
                            android:background="#00000000"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_weight="1"
                            android:contentDescription="@string/todo" />

                        <ImageButton
                            android:id="@+id/btn_email"
                            android:src="@drawable/gmail"
                            android:background="#00000000"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_weight="1"
                            android:contentDescription="@string/todo" />

                        <ImageButton
                            android:id="@+id/btn_ig"
                            android:src="@drawable/instagram"
                            android:background="#00000000"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_weight="1"
                            android:contentDescription="@string/todo" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/find_me"
                    android:fontFamily="@font/larken_light"
                    android:textSize="22sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="left"
                    tools:ignore="RtlHardcoded" />

                <fragment
                    android:id="@+id/map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="350dp"
                    android:layout_height="200dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    tools:context="com.example.mapwithmarker.MapsMarkerActivity" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/about2"
                    android:fontFamily="@font/larken_light"
                    android:textSize="22sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="left"
                    tools:ignore="RtlHardcoded" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/desc"
                    android:fontFamily="@font/larken_light"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="1dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="left"
                    tools:ignore="RtlHardcoded" />

                <Button
                    android:id="@+id/buttonSucces"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="11sp"
                    android:layout_marginBottom="30dp"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:background="@drawable/button_transparent"
                    android:drawableStart="@drawable/about"
                    android:text="@string/about_version_application"
                    tools:ignore="SmallSp" />

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</RelativeLayout>